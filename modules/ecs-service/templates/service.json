[
  {
    "name": "${service_name}",
    "image": "${image}",
    "repositoryCredentials": {
      "credentialsParameter": "${repo_secret_arn}"
    },
    "cpu": 512,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080
      }
    ],
    "environment": [
      {
        "name": "DB_ORCS_HOST",
        "value": "${db_host}"
      },
      {
        "name": "DB_ORCS_PORT",
        "value": "${db_port}"
      },
      {
        "name": "AWS_SQS_INBOUND_QUEUENAME",
        "value": "${inbound_messages}"
      },
      {
        "name": "AWS_SQS_INBOUND_DEADLETTER_QUEUENAME",
        "value": "${deadletter_inbound_messages}"
      },
      {
        "name": "AWS_SQS_INBOUND_QUEUENAME",
        "value": "${outbound_messages}"
      },
      {
        "name": "AWS_SQS_OUTBOUND_DEADLETTER_QUEUENAME",
        "value": "${deadletter_outbound_messages}"
      },
      {
        "name": "AWS_S3_BUCKET",
        "value": "${order_release_details}"
      }
    ]
  }
]